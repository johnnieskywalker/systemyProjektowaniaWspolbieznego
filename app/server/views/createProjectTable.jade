
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId


.task-form-container
    form( method="post").task-form.form-horizontal.well.span6
        h1
        p#sub1.subheading New Project
        hr
        fieldset
            #task-name-cg.control-group
                label.control-label(for='name-tf') Project Name
                .controls
                    input#task-name-tf(type='text', name='name', value= "")
            #task-description-cg.control-group
                label.control-label(for='task-tf') Description
                .controls
                    input#task-tf(type='text', name='description', value= "")

            hr



            .form-buttons
                button(type='button')#account-form-btn2.btn
                button(type='submit')#account-form-btn1.btn

